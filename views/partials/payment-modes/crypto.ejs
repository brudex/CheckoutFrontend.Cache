<div class="crypto-payment">
    <div class="mb-4">
        <label class="form-label">Select Cryptocurrency</label>
        <div class="dropdown">
            <button 
                class="btn btn-outline-secondary d-flex align-items-center justify-content-between w-100"
                type="button"
                data-bs-toggle="dropdown">
                <div class="d-flex align-items-center">
                    <i :data-lucide="cryptoIcons[selectedCrypto]" class="me-2"></i>
                    <span x-text="selectedCrypto"></span>
                </div>
                <i data-lucide="chevron-down"></i>
            </button>
            <ul class="dropdown-menu w-100">
                <template x-for="crypto in cryptocurrencies" :key="crypto">
                    <li>
                        <button 
                            class="dropdown-item d-flex align-items-center"
                            @click="selectCrypto(crypto)">
                            <i :data-lucide="cryptoIcons[crypto]" class="me-2"></i>
                            <span x-text="crypto"></span>
                        </button>
                    </li>
                </template>
            </ul>
        </div>
    </div>

    <div class="bg-light rounded-3 p-4">
        <p class="text-muted mb-4">Send your payment to the following address:</p>
        
        <div class="text-center mb-4">
            <div x-ref="qrcode"></div>
            <small class="text-muted">Scan to pay</small>
        </div>
        
        <div class="bg-white rounded p-3">
            <code class="d-block text-break" x-text="cryptoAddress"></code>
        </div>
    </div>
</div>